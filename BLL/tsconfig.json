{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "sourceMap": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "build", "dist", "./**/*.test.ts", "./**/*.setup.ts", "./**/*.js", "./**/*.jsx"]
}
